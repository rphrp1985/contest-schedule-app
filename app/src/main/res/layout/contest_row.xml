<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30sp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"


    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/siteicon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/contestname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
           android:foregroundGravity="center"


        />

    <TextView
        android:gravity="center"
        android:id="@+id/contestname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="16sp"
        android:ellipsize="end"

        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
/>
    <TextView
        android:gravity="center"
        android:id="@+id/sitesupport"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:text="Webite: "
        android:textColor="@color/black"
      app:layout_constraintTop_toBottomOf="@id/siteicon"
       app:layout_constraintLeft_toLeftOf="parent"
        android:maxLines="1"
        android:textSize="16sp"
        android:ellipsize="end"
        />

    <TextView
        android:gravity="center"
        android:id="@+id/site"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
       app:layout_constraintTop_toBottomOf="@id/siteicon"
        app:layout_constraintLeft_toRightOf="@id/sitesupport"

        android:maxLines="1"
        android:textSize="16sp"
        android:ellipsize="end"
        />


    <TextView
        android:gravity="center"
        android:id="@+id/stimehelper"
        android:text="Start Time: "
        android:layout_width="wrap_content"
        android:layout_height="20sp"
       app:layout_constraintTop_toBottomOf="@id/sitesupport"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="16sp"
        android:ellipsize="end"
        />
   <TextView
    android:gravity="center"
    android:id="@+id/stime"
    android:textColor="@color/black"
    android:layout_width="wrap_content"
    android:layout_height="20sp"
   app:layout_constraintTop_toBottomOf="@id/site"
    app:layout_constraintLeft_toRightOf="@id/stimehelper"
    android:maxLines="1"
    android:textSize="16sp"
    android:ellipsize="end"
    />


    <TextView
        android:gravity="center"
        android:id="@+id/etimehelper"
        android:layout_width="wrap_content"
        android:layout_height="20sp"

        android:text="End time: "
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/stimehelper"
        app:layout_constraintLeft_toLeftOf="parent"

        android:maxLines="1"
        android:textSize="16sp"
        android:ellipsize="end"
        />
      <TextView
    android:gravity="center"
    android:id="@+id/etime"
    android:textColor="@color/black"
    android:layout_width="wrap_content"
    android:layout_height="20sp"
    app:layout_constraintTop_toBottomOf="@id/stime"
    app:layout_constraintLeft_toRightOf="@id/etimehelper"

    android:maxLines="1"
    android:textSize="16sp"
    android:ellipsize="end"
    />



</androidx.constraintlayout.widget.ConstraintLayout>

